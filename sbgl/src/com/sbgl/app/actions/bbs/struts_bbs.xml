<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	 <package name="bbs" extends="admin">
	 	<!-- 进入登陆页面 -->
	 	<action name="login" class="BbsAction" method="login">
        	<result name="success">/login.vm</result>
        </action>
    	<!-- 处理登陆 -->
    	<action name="doLogin" class="LoginAction" method="doLogin">
        	<result name="success">/index.vm</result>
        	<result name="error">/login.vm</result> 
        </action>
        <!-- 处理退出 -->
        <action name="doLogout" class="LoginAction" method="doLogout">
        	<result name="success">/login.vm</result> 
        </action>
    </package>
</struts>