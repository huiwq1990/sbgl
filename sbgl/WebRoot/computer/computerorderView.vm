<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>$!{textmap.computerorderview_title}</title>
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="description" content="">
<meta name="author" content="">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="${cssDomain}/bootstrap.css" rel="stylesheet" type="text/css" />
<link href="${cssDomain}/global.css" rel="stylesheet" type="text/css" />

#parse("include/includePageCompatibility.vm")

</head>

<body >
<header id="header-wrap"><!--header-wrap-->
  
	#parse("include/includeGlobalHeader.vm")
  
  <div class="nav-wrap clearfix">
	
	#parse("include/includeSiteNavi.vm")
	
	#set($currentPageType="computerorderview")
	#parse("include/includeOrderspaceSubNavi.vm")
	
  </div>
</header><!--/#header-wrap-->
<section id="main-wrap" class="clearfix"><!--main-wrap-->
        <!--main-content start-->
  <div id="main-content" class="clearfix">
      <!--equip-wrap start-->          
          <div class="container">     
		<!--control-bar start-->
		<!--
      <div class="control-bar clearfix">
        <div class="title pull-left">审核预约</div>     
        <div class="pagination pull-right">
          <ul>
            <li><a href="#" rel="tooltip" data-placement="bottom" data-original-title="上一个"><i class="icon-chevron-left"></i></a></li>
            <li><a href="#" rel="tooltip" data-placement="bottom" data-original-title="下一个"><i class="icon-chevron-right"></i></a></li>
          </ul>
        </div>       
      </div>
	    -->
	  <!--control-bar end-->
	
	  
      <div class="row">
            <div class="control-bar col-md-12">
              #set($currentcomputerorderordertype=$computerorderFull.computerorderordertype)
              <div class="title">$!computerorderFull.computerordertitle <span class="label label-important">#parse("include/includeComputerorderType.vm")</span></div>
            </div>        
            <div class="col-md-7">                  
                
				      #parse("include/includeComputerorderList.vm")
            
            </div>
            <div class="col-md-5">
                <div class="thumbnail">
                  <div class="hd">
                    <h3>$!{textmap.computerorderview_order_status_title}</h3>
                  </div>
                  <div class="caption">
					#set($curstatus = $computerorderFull.computerorderstatus)
                      #parse("include/includeComputerorderStatus.vm")
                      
                      #if($curstatus == $ComputerorderStatusAduitReject)
                        <hr>
							        ###如果是驳回，根据预约类型显示重新预约，
            						#if($!computerorderFull.computerorderordertype==2) 
            							<a class="btn btn-primary" action-type="" action-data="" href="${webbaseurl}\toComputerClassorder.${strutsaction}?computerorderid=$!computerorderFull.computerorderid&computerhomeworkid=$!computerorderFull.computerordercomputerhomeworkid&reorder=1">$!{textmap.computerorderview_classorder_reject_tip}</a>
            						#elseif($!computerorderFull.computerorderordertype==1)  
            							<a class="btn btn-primary" action-type="" action-data="" href="${webbaseurl}\toComputerIndividualorder.${strutsaction}?computerorderid=$!computerorderFull.computerorderid&reorder=1">$!{textmap.computerorderview_indivorder_reject_tip}</a>
            						#else
            							$!{textmap.computerorderstatus_audit_error}
            							#end
            						#end
                       </div>
                </div>
                <div class="thumbnail">
                  <div class="hd">
                    <h3>$!{textmap.computerorderstatus_detail_title}</h3>
                  </div>
        
				  <div class="caption">
                    <div class="rent-detail">
                      <span class="rent-user"><strong>$!{textmap.computerorderview_detail_orderuser}: $!{user.name}</strong></span> - <span class="rent-num"><strong> $!{textmap.computerorderview_detail_ordernum}：$!computerorderFull.computerorderserialnumber</strong></span>
                      <div class="rent-userinfo">${userRoleName}</div> 
                      #set($currentcomputerorderordertype=$computerorderFull.computerorderordertype)
                      <div class="rent-contact">$!{textmap.computerorderview_detail_ordertype}：#parse("include/includeComputerorderType.vm")</div>
					            <div class="rent-contact">$!{textmap.computerorderview_detail_orderuserphone}：$!{user.telephone}</div>
					 #if($computerorderFull.computerorderremark)
                      <div class="rent-remark"><i class="icon-pencil"></i> $!computerorderFull.computerorderremark</div>
					  #end
                    </div>
                    #if($curstatus == $ComputerorderStatusAduitReject)
                    <hr>
                    #end
                  </div>
				  
				  #if($curstatus == $ComputerorderStatusAduitReject)
                  <ul class="media-list">
                    <li class="media">
                      <a rel="popover" class="pull-left" href="#" data-original-title="" title="">
                        <img src="$imgtool.url("user","$!computerorderFull.audituserpicpath")" width="28" height="28" class="img-rounded">
                      </a>
                      <div class="media-body">
                        <div class="media-heading"><h5><a rel="popover" href="#" data-original-title="" title="">$!computerorderFull.auditusername</a></h5></div>
                        <p>$!{textmap.computerorderview_detail_orderrejectreason}：$!computerorderFull.computerorderrejectreason</p>
                      </div>
                    </li>
                  </ul>
				  #end                       
                </div>               
            </div>                    
      </div>


          </div>
  </div>
  <!---main-content end-->

</section>



<div id="popover_user_wrapper" style="display: none" onmouseover="$(this).mouseleave(function() {$(this).hide(); });">
  <img src="../img/cover-img.jpg" class="cover" alt="封面照片">
  <div class="cover-layout"></div>
  <div class="avatar"><img src="../img/photo.jpg" width="80" height="80" class="img-circle"></div>
  <div class="user-wrap">
    <div class="user-name"><a href="#">用户名</a></div>
    <div class="user-info" title="这里是一句话简介,这里是一句话简介,这里是一句话简介,这里是一句话简介">这里是一句话简介，这里是一句话简介，这里是一句话简介</div>
    <div class="user-info">职务等信息</div>
    <div class="user-info">地点</div>
  </div>
  <div class="contact-wrap"><a href="#" title="发消息"><i class="icon-envelope"></i></a></div>
</div>

