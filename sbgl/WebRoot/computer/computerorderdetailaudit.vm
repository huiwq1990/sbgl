<!-- Modal -->
<div id="modify-status" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none; ">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="icon-remove"></i></button>
    <h3 id="myModalLabel">修改</h3>
  </div>
  
  <div class="modal-body">
      <p>修改设备。</p>
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label for="inputEquipId" class="col-xs-3 control-label">设备号</label>
          <div class="col-xs-7">
            <input type="text" class="form-control" id="inputEquipId" placeholder="设备编号" value="242424">
          </div>
        </div>
        <div class="form-group">
          <label for="inputEquipModelId" class="col-xs-3 control-label">所属设备型号</label>
          <div class="col-xs-7">
            <select class="select2 select-white form-control" id="inputEquipModelId">
              <optgroup label="数字摄影机">
                <option value="AK">Alaska</option>
                <option value="HI">Hawaii</option>
              </optgroup>
              <optgroup label="数字摄像机">
                <option value="CA">California</option>
              </optgroup>
              <optgroup label="单反">
                <option value="AZ">Arizona</option>
              </optgroup>
              <optgroup label="镝灯">
                <option value="AL">Alabama</option>
              </optgroup>
              <optgroup label="钨丝灯">
                <option value="CT">Connecticut</option>
              </optgroup>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEquipCategory" class="col-xs-3 control-label">分类</label>
          <div class="col-xs-7">
            <select class="select2 select-white form-control" id="inputEquipCategory">
              <optgroup label="摄影摄像机">
                <option value="2">数字摄影机</option>
                <option value="3">数字摄像机</option>
                <option value="4">单反</option>
              </optgroup>
              <optgroup label="灯具">
                <option value="6">钨丝灯</option>
                <option value="7">镝灯</option>
              </optgroup>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEquipStatus" class="col-xs-3 control-label">状态</label>
          <div class="col-xs-7">
            <select class="select2 select-white form-control" id="inputEquipStatus">
              <option value="0">正常</option>
              <option value="1">借出</option>
              <option value="2">维护</option>
              <option value="3">维修</option>
              <option value="4">遗失</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEquipRemark" class="col-xs-3 control-label">备注</label>
          <div class="col-xs-7">
            <textarea class="form-control" id="inputEquipRemark" rows="3"></textarea>
          </div>
        </div>
      </form>
    </div>
  <div class="modal-footer">
    <button class="btn btn-white" data-dismiss="modal" aria-hidden="true">取 消</button>
    <button class="btn btn-primary">确 定</button>
  </div>
</div>

