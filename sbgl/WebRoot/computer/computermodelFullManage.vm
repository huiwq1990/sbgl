<script>
	var cookie = { 
  		//读取COOKIES,n为COOKIE名 
   		Get:function(n){ 
       		var re=new RegExp(n+'=([^;]*);?','gi');
       	    var r=re.exec(document.cookie)||[];
       	    return (r.length>1?r[1]:null)
   		}
	};
	var editComputermodelId;
	var editComputermodelName;
	
	//选择修改按钮，填充修改弹出框
	$("body").on("click", "a[action-type|=editComputermodelFillIn]", function() {
		var myData = $(this).data();
		$("#inputEditComputermodelName").val(myData.name);
		$('#inputEditComputermodelComputercategoryid').select2("val",myData.computercategoryid);
		$('#inputEditComputermodelDescription').val(myData.description);
		
		editComputermodelId = myData.id;
		editComputermodelName = myData.name;
	});

	/* 处理CheckBox选中事件用于删除处理 */
	var idsForDel;	
	$("input[type='checkbox']").click(function() {
		//var num = 0;
		idsForDel = "";
		
		if($(this).attr("id") === "chk-all") {
			$("input[name='chk-list']").prop("checked",$(this).prop("checked"));
		}
		$("input[name='chk-list']").each(function() {
			if($(this).prop("checked") === true) {
				//num++;
				idsForDel += $(this).prop("value") + ";";
			}
		});
		//alert("test");
	});
	//end box

// 触发提交按钮事件
$('.modal').on('click', ('button.btn-primary'), function () {		

		var _this = $(this);

		//处理添加
		if(_this.attr('action-type') == 'addComputermodelButton')
		{
			//alert('ssss');
			var actionUrl = "${webbaseurl}/addComputermodelAjax.${strutsaction}";
			var addComputermodelName = $('#addComputermodelName').val();
			var addComputermodelComputercategoryid = $('#addComputermodelComputercategoryid').val();
			var addComputermodelDescription = $('#addComputermodelDescription').val();
			var postData = {
				"createuserid": cookie.Get("id"),
				"name": addComputermodelName,
				"computercategoryid":addComputermodelComputercategoryid,
				"description": addComputermodelDescription
			}
			var successStr = "添加分类成功！";
			var failedStr = "添加分类失败！";				
		}
		//end add
		
		//if deleteComputermodelButton delete分类 
		/*if(_this.attr('action-type') == 'deleteComputermodelButton'){		
		alert('sss');
			var actionUrl = "${webbaseurl}/deleteComputermodelFullAjax.${strutsaction}";
			idsForDel = idsForDel.substring(0,idsForDel.length-1);
			alert(idsForDel);
			var postData = {
				computermodelIdsForDel: idsForDel
			}		
		}*/
		//end if deleteComputermodelButton	
		
		//if updateComputermodelButton 更新分类
		if(_this.attr('action-type') == 'updateComputermodelButton'){		
			var actionUrl = "${webbaseurl}/updateComputermodelAjax.${strutsaction}";
			var editComputermodelName = $('#inputEditComputermodelName').val();
			var editComputermodelComputercategoryid = $('#inputEditComputermodelComputercategoryid').val();
			var editComputermodelDescription = $('#inputEditComputermodelDescription').val();			
			var postData = {
				"id": editComputermodelId,
				"name": editComputermodelName,				
				"computercategoryid":editComputermodelComputercategoryid,
				"description": editComputermodelDescription
			}
			
		}
		//end if updateComputermodelButton
		
		
		// 如果是其它的提交操作，对照上一行的if代码处理		
		
		// 提交处理
		jQuery.ajax({  
		    url: actionUrl,  
		    type: "post",
		    data: postData,
		    dataType: 'json',
			success: function(data){
				var returnJson = jQuery.parseJSON(data); 
				if(returnJson.flag == 1){
					var n = noty({text: returnJson.reason, timeout: 2500, type: 'success'});					
					_this.parents('.modal').modal('toggle');		// 提交成功，关闭模态对话框		
					console.log('this is :'+$(this));
				}else{
					var n = noty({text: returnJson.reason, timeout: 2500, type: 'error'});
				}
			}		  	  
		});		
	});
// end 触发事件




	//delete分类
	$("body").on("click", "a[action-type|=deleteComputermodelButton]", function() {
		idsForDel = idsForDel.substring(0,idsForDel.length-1);
