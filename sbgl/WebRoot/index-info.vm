<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>北京电影学院摄影系</title>
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="description" content="">
<meta name="author" content="">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
<link href="${cssDomain}/bootstrap.css" rel="stylesheet" type="text/css" />
<link href="${cssDomain}/global.css" rel="stylesheet" type="text/css" />

#parse("include/includePageCompatibility.vm")

</head>

<body>
<header id="header-wrap"><!--header-wrap-->
		#parse("include/includeGlobalHeader.vm")
  
  <div class="nav-wrap clearfix">	
	#parse("include/includeSiteNavi.vm")	
	##set($currentPageType="createorder")
	##parse("include/includeOrderspaceSubNavi.vm") 
  </div>
  
</header><!--/#header-wrap-->
<section id="user-header"><!-- user-header -->
<div class="container">
  <div class="user-content thumbnail">
    <div id="user-profile">
      <div class="media">
        <div id="user-profile-photo" class="pull-left">
          <img src="${imageDomain}/photo.jpg" width="120" height="120" class="img-circle">
        </div>
        <div id="user-profile-info" class="media-body">
          <h4 class="profile-name media-heading">$!user.name</h4>
		  <!--
          <div class="profile-more-info">2012级研究生 - 影像视觉效果研究方向</div>-->
        </div>
      </div>
    </div>
    <div class="user-bg-pic"><img src="${imageDomain}/img8.jpg" class="img-responsive"></div>
    <nav class="user-nav">
      <ul class="nav nav-tabs nav-tabs-google">
        <li class="active"><a href="${webbaseurl}/indexInfo.do">简介</a></li>
        <li><a href="${webbaseurl}/index.do">信息</a></li>
      </ul>
    </nav>
  </div>
</div>  
</section><!-- /.user-header -->
<section id="main-wrap"><!--main-wrap-->

  <div id="main-content" class="clearfix"><!--main-content start-->
    <div id="stream-wrap">
      <div id="stream" class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="thumbnail">
              <div class="hd clearfix">
                <h3 class="pull-left">基本信息</h3>
                <a href="#modify-basic" class="lk pull-right" data-toggle="modal" role="button">编辑</a>
              </div>
              <dl class="dl-horizontal">
                <dt>姓名</dt>
                <dd>$!userName</dd>
                <dt>性别</dt>
                <dd>$!gender</dd>
				 #if($!classBelongTo != "-1")
                    <dt>所在班级</dt>
                    <dd>$!classBelongTo</dd>
				 #end
              </dl>
            </div>
          </div>
          <div class="col-md-6">
            <div class="thumbnail">
              <div class="hd clearfix">
                <h3 class="pull-left">联系信息</h3>
                <a href="#modify-contact" class="lk pull-right" data-toggle="modal" role="button">编辑</a>
              </div>
              <dl class="dl-horizontal">
                <dt>电子邮箱</dt>
                <dd>$!email</dd>
                <dt>手机号码</dt>
                <dd>$!phone（如果没有：<a href="">添加</a>）</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--stream-wrap end-->
  </div>
  <!---main-content end-->
</section>


<!-- Modal -->
<div id="modify-basic" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none; ">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="icon-remove"></i></button>
    <h3 id="myModalLabel">基本信息</h3>
  </div>
  <div class="modal-body">
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label for="inputGender" class="col-xs-4 control-label">性别</label>
          <div class="col-xs-6">
            <label class="radio-inline">
              <input type="radio" name="inputGender" id="gender-male" value="1" checked="">男
            </label>
            <label class="radio-inline">
              <input type="radio" name="inputGender" id="gender-female" value="2">女
            </label>
          </div>
        </div>
        <div class="form-group">
          <label for="inputBirthday" class="col-xs-4 control-label">生日</label>
          <div class="col-xs-2">
            <input type="text" class="form-control" id="inputBirthday" placeholder="1989">
          </div>
          <div class="col-xs-2">
            <select class="select2 select-white form-control" id="inputBirthMonth">
              <option value="1">1</option><option value="2">2</option>
              <option value="3">3</option><option value="4">4</option>
              <option value="5">5</option><option value="6">6</option>
              <option value="7">7</option><option value="8">8</option>
              <option value="9">9</option><option value="10">10</option>
              <option value="11">11</option><option value="12">12</option>
            </select>
          </div>
          <div class="col-xs-2">
            <select class="select2 select-white form-control" id="inputBirthDay">
              <option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option>
              <option value="5">5</option><option value="6">6</option><option value="7">7</option><option value="8">8</option>
              <option value="9">9</option><option value="10">10</option><option value="11">11</option><option value="12">12</option>
              <option value="13">13</option><option value="14">14</option><option value="15">15</option><option value="16">16</option>
              <option value="17">17</option><option value="18">18</option><option value="19">19</option><option value="20">20</option>
              <option value="21">21</option><option value="22">22</option><option value="23">23</option><option value="24">24</option>
              <option value="25">25</option><option value="26">26</option><option value="27">27</option><option value="28">28</option>
              <option value="29">29</option><option value="30">30</option><option value="31">31</option>
            </select>
          </div>
        </div>
      </form>
    </div>
  <div class="modal-footer">
    <button class="btn btn-white" data-dismiss="modal" aria-hidden="true">取 消</button>
    <button class="btn btn-primary">确 定</button>
  </div>
</div>
<div id="modify-contact" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none; ">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="icon-remove"></i></button>
    <h3 id="myModalLabel">基本信息</h3>
  </div>
  <div class="modal-body">
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label for="inputPhone" class="col-xs-4 control-label">手机号码</label>
          <div class="col-xs-6">
            <input type="text" class="form-control" id="inputPhone" placeholder="用户的联系电话">
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail" class="col-xs-4 control-label">电子邮箱</label>
          <div class="col-xs-6">
            <input type="email" class="form-control" id="inputEmail" placeholder="xxx@xxx.xxx">
          </div>
        </div>
      </form>
    </div>
  <div class="modal-footer">
    <button class="btn btn-white" data-dismiss="modal" aria-hidden="true">取 消</button>
    <button class="btn btn-primary">确 定</button>
  </div>
</div>
