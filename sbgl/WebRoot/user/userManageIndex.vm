				<option value=$!item.id>$!item.name</option>
			  #end
			#end
			</optgroup>
			<optgroup label="教师">
			#foreach($item in $allGroupList)
			  #if($!item.type == 2)
				<option value=$!item.id>$!item.name</option>
			  #end
			#end
			</optgroup>
			<optgroup label="其他">
			#foreach($item in $allGroupList)
			  #if($!item.type == 4)
				<option value=$!item.id>$!item.name</option>
			  #end
