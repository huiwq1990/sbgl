            </div><!--control-bar end-->
            <div class="panel panel-default">
              <div class="panel-body">
                <form class="form-horizontal" action="javascript:void(0)" role="form">
				  <div class="form-group">
                    <label for="inputStuNum" class="col-lg-2 control-label">编号</label>
                    <div class="col-lg-4">
                      <input type="text" class="form-control" id="inputStuNum" placeholder="学生学号或教师编号">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputTrueName" class="col-lg-2 control-label">真实姓名</label>
                    <div class="col-lg-4">
                      <input type="text" class="form-control" id="inputTrueName" placeholder="真实姓名">
                    </div>
                  </div>
				  <div class="form-group">
                    <label for="inputStuSex" class="col-lg-2 control-label">性别</label>
                    <div class="col-lg-4">
                      <select class="select2 form-control" id="inputStuSex">
            			<option value="0">男</option>
            			<option value="1">女</option>
            		  </select>
                    </div>
                  </div>
				  <div class="form-group">
                    <label for="inputPassword1" class="col-lg-2 control-label">密码</label>
                    <div class="col-lg-4">
                      <input type="text" class="form-control" id="inputPassword1" placeholder="登录密码">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputUserGroup" class="col-lg-2 control-label">用户组</label>
                    <div class="col-lg-4">
                      <select class="select2 form-control" id="inputUserGroup">
						<optgroup label="学生">
						#foreach($item in $allGroupList)
						  #if($!item.type == "2")
							<option value=$!item.id>$!item.name</option>
						  #end
						#end
						</optgroup>
						<optgroup label="教师">
						#foreach($item in $allGroupList)
						  #if($!item.type == 6)
							<option value=$!item.id>$!item.name</option>
						  #end
						#end
						</optgroup>
						<optgroup label="其他">
						#foreach($item in $allGroupList)
						  #if($!item.type == -1)
							<option value=$!item.id>$!item.name</option>
						  #end
						#end
						</optgroup>	
                      </select>
                    </div>
                  </div>
				  <div class="form-group">
                    <label for="modifyEquipCategory" class="col-lg-2 control-label">可否借阅</label>
                    <div class="col-lg-4">
                      <select class="select2 form-control" id="inputStuCould">
            			<option value="0">是</option>
            			<option value="1">否</option>
            		  </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputStuClass" class="col-lg-2 control-label">班级</label>
                    <div class="col-lg-4">
                      <select class="select2 form-control" id="inputStuClass">
						<option value=-1>无</option>
						#foreach($clazz in $clazzList)
							<option value=$!clazz.classId>$!clazz.classname</option>
						#end
