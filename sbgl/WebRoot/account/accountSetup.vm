#set($user = $request.getSession().getAttribute("loginUser"))
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>北京电影学院摄影系</title>
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="description" content="">
<meta name="author" content="">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="${cssDomain}/bootstrap.css" rel="stylesheet" type="text/css" />
<link href="${cssDomain}/global.css" rel="stylesheet" type="text/css" />

#parse("include/includePageCompatibility.vm")
</head>

<body>
<header id="header-wrap"><!--header-wrap-->
  
	#parse("include/includeGlobalHeader.vm")
  
  <div class="nav-wrap">
    #parse("include/includeSiteNavi.vm")
    <div class="sub-nav">
      <ul class="nav nav-tabs nav-tabs-google">
        <li class="active"><a href="#">账户设置</a></li>
        <!--<li><a href="#">帮助</a></li>-->
      </ul>
    </div>
  </div>
  
</header><!--/#header-wrap-->
<section id="main-wrap"><!--main-wrap-->
  <div id="main-content" class="clearfix"><!--main-content start-->
    <div id="stream-wrap">
      <div id="stream" class="container">
        <div class="row">
          <div class="col-md-4">
            <div class="list-group">
              <a href="${webbaseurl}/account.${strutsaction}" class="list-group-item active">账户</a>
              <a href="${webbaseurl}/passwordSet.${strutsaction}" class="list-group-item">密码</a>
            </div>
          </div>
          <div class="col-md-8">
            <div class="thumbnail">
              <div class="hd">
                <h3>账号</h3>
              </div>
              <form class="form-horizontal" role="form" action="javascript:void(0)">
                <div class="form-group">
                  <div class="clearfix">
                    <label for="inputTrueName" class="col-md-3 control-label">真实姓名</label>
                    <div class="col-md-4"><p class="help-block">$!user.name</p></div>
                  </div>
                  <div class="col-md-offset-3 col-md-6"><P class="text-muted">真实姓名用于系统预约中的身份确认，不可修改。</P></div>
                </div>
                <div class="form-group">
                  <label for="inputLanguage" class="col-md-3 control-label">语言</label>
                  <div class="col-md-4">
                    <select class="select2 select-white form-control" id="inputLanguage">
                      <option value="1">简体中文</option>
                      <option value="2">English</option>
                    </select>

                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-offset-3 col-md-4">
                    <button type="submit" class="btn btn-primary">保存更改</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--stream-wrap end-->
  </div>
  <!---main-content end-->
</section>


    <!-- javascript
    ================================================== -->
<script src="${jsDomain}/jquery.js"></script>
<script src="${jsDomain}/loader.min.js"></script>
<script src="${jsDomain}/select2.js"></script>
<script src="${jsDomain}/bootstrap-hover-dropdown.min.js"></script>
<script src="${jsDomain}/bfa.js"></script>
<script src="${jsDomain}/bootstrap-datepicker.js"></script>
<script src="${jsDomain}/locales/bootstrap-datepicker.zh-CN.js"></script>
<script src="${jsDomain}/xdate.js"></script>
<script src="${jsDomain}/computer/computerorder.js"></script>
<script src="${jsDomain}/jquery.noty.js"></script>

<script>
	$("body").on("click", ".btn", function() {
		//console.log($!user.roletype);
		//console.log($!user.id);
		//console.log($!user.password);
		var n = noty({text: " 修改成功！", timeout: 700, type: 'success'});
	});
</script>

</body>
</html>