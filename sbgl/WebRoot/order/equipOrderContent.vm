<script>
	$("body").on("click", "a[data-type|=deleteorder]", function() {
		var myData = $(this).data();
		cId = myData.id;
		$.ajax({
			url: "deleteorder.do",
			type: 'POST',
			data: {borrowId:cId},
			dataType: 'json',
			success: function(data){
				if(data.tag==1){
					alert("删除成功");
					location.href="equipOrdIndex.do";
				}else{
					alert(data.message);
					return;
				}
			}	  
		});
	});
</script>

