<script>
	var cookie = { 
  		//读取COOKIES,n为COOKIE名 
   		Get:function(n){ 
       		var re=new RegExp(n+'=([^;]*);?','gi');
       	    var r=re.exec(document.cookie)||[];
       	    return (r.length>1?r[1]:null)
   		}
	};
	
	$("body").on("click", "button[action-type|=addEquipDetail]", function() {
		var detailNum = $("#inputEquipId").val();
		var modelId = $("#inputEquipModelId").val();
		var state = $("#inputEquipStatus").val();
		var memo = $("#inputEquipRemark").val();
		console.log("detailNum " + detailNum);
		console.log("state" + state);
		console.log("modelId" + modelId);
		console.log("memo" + memo);
		console.log("administrationid" + cookie.Get("id"));
		var postData = {
			"equipmentdetail.administrationid": cookie.Get("id"),
			"equipmentdetail.equipserial": detailNum,
			"equipmentdetail.equipmentid": modelId,
			"equipmentdetail.status": state,
			"equipmentdetail.usermark": memo
		}
	
		$.ajax({  
		    url: "addEquipDetail.do",  
		    type: "post",
		    data: postData,
		    success:function(data,textStatus,jq){  
		    	console.log(data);
	        },  
		    error:function(data,textStatus,jq){alert("添加设备失败!");}  
		});
	})
	
</script>
